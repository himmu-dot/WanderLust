<style>
  @media (max-width: 768px) {
  .mobile-nav-bg {
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 1rem;
    margin-top: 0.5rem;
  }
}
  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: white;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem; 
  }
  .nav-link-btn {
  border: 1px solid #ccc;       /* Light border */
  border-radius: 20px;              /* Rounded corners */
  padding: 0.55rem 1.1rem;          /* More top-bottom & left-right padding */
  margin-left: 0.5rem;              /* Space between buttons */
  transition: background-color 0.2s ease;
  
  margin: 0 0.4rem;


}

.nav-link-btn:hover {
  background-color: #f8f9fa;        /* Light gray hover */
  text-decoration: none;
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- LEFT: Logo and Home -->
    <div class="d-flex align-items-center">
      <a class="navbar-brand me-2" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <a class="nav-link fw-semibold" href="/listings">Home</a>
    </div>

    <!-- Toggler -->
    <button 
      class="navbar-toggler" 
      type="button" 
      data-bs-toggle="collapse" 
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse mobile-nav-bg w-100" id="navbarNavAltMarkup">
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center w-100 gap-3">

    <!-- LEFT spacer for logo space -->
    <div class="d-none d-md-block" style="width: 180px;"></div>

    <!-- Search Form: CENTERED -->
    <div class="flex-grow-1 d-flex justify-content-center order-1 order-md-1">
      <form class="d-flex w-100" style="max-width: 600px;" role="search">
        <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" />
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>
    </div>

    <!-- Nav Links: RIGHT -->
    <div class="d-flex flex-column flex-md-row align-items-center gap-2 order-2 order-md-2">
      <a class="nav-link fw-semibold nav-link-btn" href="/listings/new">Create Listing</a>
      <% if (!currUser) { %>
        <a class="nav-link nav-link-btn" href="/signup"><b>Sign up</b></a>
        <a class="nav-link nav-link-btn" href="/login"><b>Log in</b></a>
      <% } %>
      <% if (currUser) { %>
        <a class="nav-link fw-semibold nav-link-btn" href="/logout">Log out</a>
      <% } %>
    </div>

  </div>
</div>

</nav>
